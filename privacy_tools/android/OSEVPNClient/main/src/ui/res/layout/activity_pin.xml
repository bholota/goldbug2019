<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ose_bg"
    tools:context="com.goldbug.vpn.PinActivity"
    >

  <ImageView
      android:id="@+id/dot1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/ic_shape_circle_outline"
      app:layout_constraintBottom_toTopOf="@+id/pin1"
      app:layout_constraintEnd_toStartOf="@+id/dot2"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <ImageView
      android:id="@+id/dot2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="4dp"
      android:background="@drawable/ic_shape_circle_outline"
      app:layout_constraintEnd_toStartOf="@+id/dot3"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/dot1"
      app:layout_constraintTop_toTopOf="@+id/dot1"
      />

  <ImageView
      android:id="@+id/dot3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="4dp"
      android:background="@drawable/ic_shape_circle_outline"
      app:layout_constraintEnd_toStartOf="@+id/dot4"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/dot2"
      app:layout_constraintTop_toTopOf="@+id/dot2"
      />

  <ImageView
      android:id="@+id/dot4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="4dp"
      android:background="@drawable/ic_shape_circle_outline"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/dot3"
      app:layout_constraintTop_toTopOf="@+id/dot3"
      />

  <Button
      android:id="@+id/pin1"
      style="@style/PinPadButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="1"
      app:layout_constraintBottom_toBottomOf="@+id/pin2"
      app:layout_constraintEnd_toStartOf="@+id/pin2"
      app:layout_constraintStart_toStartOf="parent"
      />

  <Button
      android:id="@+id/pin2"
      style="@style/PinPadButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="2"
      app:layout_constraintBottom_toTopOf="@+id/pin5"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

  <Button
      android:id="@+id/pin3"
      style="@style/PinPadButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="3"
      app:layout_constraintBottom_toBottomOf="@+id/pin2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/pin2"
      />

  <Button
      android:id="@+id/pin4"
      style="@style/PinPadButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="4"
      app:layout_constraintBottom_toBottomOf="@+id/pin5"
      app:layout_constraintEnd_toStartOf="@+id/pin5"
      app:layout_constraintStart_toStartOf="parent"
      />

  <Button
      android:id="@+id/pin5"
      style="@style/PinPadButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="5"
      app:layout_constraintBottom_toTopOf="@+id/pin7"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

  <Button
      android:id="@+id/pin6"
      style="@style/PinPadButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="6"
      app:layout_constraintBottom_toBottomOf="@+id/pin5"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/pin5"
      />

  <Button
      android:id="@+id/pin7"
      style="@style/PinPadButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="7"
      app:layout_constraintBottom_toBottomOf="@+id/pin8"
      app:layout_constraintEnd_toStartOf="@+id/pin8"
      app:layout_constraintStart_toStartOf="parent"
      />

  <Button
      android:id="@+id/pin8"
      style="@style/PinPadButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="8"
      app:layout_constraintBottom_toTopOf="@+id/pin0"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

  <Button
      android:id="@+id/pin9"
      style="@style/PinPadButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="9"
      app:layout_constraintBottom_toBottomOf="@+id/pin8"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/pin8"
      />

  <Button
      android:id="@+id/pin0"
      style="@style/PinPadButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="80dp"
      android:text="0"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

  <Button
      android:id="@+id/clear"
      style="@style/PinPadButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="80dp"
      android:text="wyczyść"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/pin0"
      />
  <ImageView
      android:id="@+id/logo"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:layout_marginBottom="36dp"
      app:layout_constraintBottom_toTopOf="@+id/dot2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:tint="@color/white"
      android:src="@drawable/ic_lock_closed"
      />
</android.support.constraint.ConstraintLayout>
